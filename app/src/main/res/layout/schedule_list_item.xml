<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sch_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="12dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/sch_lect_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/serial_circle_bg"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginEnd="12dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="1" />


    <TextView
        android:id="@+id/sch_semester_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/sch_lect_no_tv"
        android:textColor="@android:color/black"
        tools:text="V Sem" />

    <TextView
        android:id="@+id/sch_branch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/sch_semester_tv"
        android:textColor="@android:color/black"
        tools:text="CS" />

    <TextView
        android:id="@+id/sch_section_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/sch_branch_tv"
        android:textColor="@android:color/black"
        tools:text="A" />

    <TextView
        android:id="@+id/sch_subject_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sch_semester_tv"
        android:layout_toEndOf="@id/sch_lect_no_tv"
        android:textColor="@android:color/black"
        tools:text="ADS" />

    <!-- from text (place holder)-->
    <TextView
        android:id="@+id/from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/sch_lect_start_tv"
        android:padding="2dp"
        android:text="@string/from"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <!-- lecture start time text -->
    <TextView
        android:id="@+id/sch_lect_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="08:00" />

    <!-- to text (place holder)-->
    <TextView
        android:id="@+id/to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_tv"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@id/sch_lect_end_tv"
        android:padding="2dp"
        android:text="@string/to"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <!-- lecture end time text -->
    <TextView
        android:id="@+id/sch_lect_end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="08:00" />

</RelativeLayout>

