<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

    <!-- college text inside circle bg -->
    <TextView
        android:id="@+id/main_college_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/college_circle_bg"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="GIT"
        android:layout_alignParentStart="true" />

    <!-- layout holding semester, branch and section -->
    <RelativeLayout
        android:id="@+id/sem_branch_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/main_college_tv"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/main_college_tv">

        <!-- semester text -->
        <TextView
            android:id="@+id/main_semester_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="V Sem" />


        <!-- branch text -->
        <TextView
            android:id="@+id/main_branch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_semester_tv"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="CS" />

        <!-- section text -->
        <TextView
            android:id="@+id/main_section_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_semester_tv"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/main_branch_tv"
            android:paddingLeft="4dp"
            android:paddingRight="2dp"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="'A'"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/main_branch_tv"
            android:paddingStart="4dp"
            android:paddingEnd="2dp" />
    </RelativeLayout>

    <!-- separator in between class and subject -->
    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/sem_branch_layout"
        android:background="@android:color/darker_gray"
        android:layout_toEndOf="@id/sem_branch_layout" />

    <LinearLayout
        android:id="@+id/attendance_detail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/separator"
        android:orientation="vertical"
        android:layout_toEndOf="@id/separator">

        <!-- subject text -->
        <TextView
            android:id="@+id/main_subject_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="ADS" />

        <!-- lecture text -->
        <TextView
            android:id="@+id/main_lecture_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#000"
            android:textSize="12sp"
            tools:text="5th Lecture" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <!-- date text -->
            <TextView
                android:id="@+id/main_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:paddingRight="4dp"
                android:textColor="@android:color/black"
                tools:text="Sat,"
                android:textSize="12sp"
                android:paddingEnd="4dp" />

            <!-- date text -->
            <TextView
                android:id="@+id/main_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="07-08-2018" />
        </LinearLayout>
    </LinearLayout>

    <!-- separator in between class and subject -->
    <View
        android:id="@+id/separator2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/attendance_count_layout"
        android:background="@android:color/darker_gray"
        android:layout_toStartOf="@id/attendance_count_layout" />

    <LinearLayout
        android:id="@+id/attendance_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_alignParentEnd="true">

        <!-- students present text -->
        <TextView
            android:id="@+id/main_students_present_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            tools:text="36" />

        <!-- out of text (place holder)-->
        <TextView
            android:id="@+id/out_of_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/out_of"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <!-- total students text-->
        <TextView
            android:id="@+id/main_total_students_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            tools:text="40" />
    </LinearLayout>
</RelativeLayout>