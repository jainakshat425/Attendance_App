<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_serial_no_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/serial_circle_bg"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        tools:text="10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_serial_no_rep"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tv_name_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            tools:text="Akshat Jain"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_roll_no_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            tools:text="16EGJCS017" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/present_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

</RelativeLayout>